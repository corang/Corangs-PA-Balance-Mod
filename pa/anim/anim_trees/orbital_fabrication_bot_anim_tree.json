{
  "blend_root": {
    "nodes": {
      "being_built": {
        "anim_name": "closed",
        "type": "playback"
      },
      "dead": {
        "type": "bind_pose"
      },
      "ghost": {
        "type": "bind_pose"
      },
      "living": {
        "entries": [
          {
            "name": "attached",
            "node": {
              "anim_name": "closed",
              "looping": false,
              "type": "playback"
            },
            "reset": "playback_reset",
            "transition_forward": {
              "func": "not_attached",
              "target": "deploy"
            },
            "transition_reverse": {
              "func": "not_attached",
              "target": "deploy"
            },
            "type": "sequence_entry"
          },
          {
            "name": "deploy",
            "node": {
              "anim_name": "deploy",
              "looping": false,
              "type": "playback"
            },
            "reset": "playback_reset",
            "transition_forward": {
              "func": "anim_complete",
              "target": "idle"
            },
            "transition_reverse": {
              "func": "anim_complete",
              "target": "idle"
            },
            "type": "sequence_entry"
          },
          {
            "name": "idle",
            "node": {
              "anim_name": "open",
              "looping": true,
              "type": "playback"
            },
            "reset": "playback_reset",
            "transition_forward": {
              "func": "is_attached",
              "target": "attached"
            },
            "transition_reverse": {
              "func": "is_attached",
              "target": "attached"
            },
            "type": "sequence_entry"
          }
        ],
        "transition_seek": {
          "false_target": "idle",
          "func": "is_attached",
          "true_target": "attached"
        },
        "type": "sequence"
      }
    },
    "type": "unit_state"
  },
  "skeleton_controls": [
    {
      "child": {
        "rotation_axis": "z",
        "rotation_bone": "bone_turret",
        "type": "procedural_aim"
      },
      "lerp_func": "not_being_built",
      "type": "fader"
    },
    {
      "child": {
        "angular_velocity": [
          0,
          0,
          0
        ],
        "angular_velocity_range": [
          100,
          360,
          20
        ],
        "bone": "bone_turret",
        "drag": 0.5,
        "gravity": 20,
        "type": "giblet",
        "velocity": [
          0,
          5,
          15
        ],
        "velocity_range": [
          10,
          10,
          5
        ]
      },
      "lerp_func": "is_dead",
      "type": "fader"
    }
  ]
}